<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PVEM.Paginas.ListarQuestionarios"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout >
                <Image Source="logo.png"
                       HeightRequest="75"   
                       BackgroundColor="#3A3732"
                       HorizontalOptions="Fill"/>
                <Label Text="Questionários"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="10"/>
                <StackLayout
                Spacing="10"
                Padding="20"
                x:Name="slBotoes">
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>